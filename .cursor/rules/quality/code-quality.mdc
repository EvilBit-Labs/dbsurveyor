    fn create_test_schema() -> DatabaseSchema {
        DatabaseSchema {
            database_name: "test_db".to_string(),
            database_type: DatabaseType::PostgreSQL,
            tables: vec![create_test_table("users")],
            created_at: chrono::Utc::now(),
        }
