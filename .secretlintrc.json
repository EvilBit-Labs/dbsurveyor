{
    "rules": {
        "@secretlint/secretlint-rule-preset-recommend": {
            "rules": {
                "@secretlint/secretlint-rule-basicauth": {
                    "allowPatterns": [
                        "user:pass@host",
                        "user:pass@localhost",
                        "user:pass@127.0.0.1",
                        "admin:password@host",
                        "test:test@localhost",
                        "postgres:postgres@localhost",
                        "mysql:mysql@localhost",
                        "root:root@localhost"
                    ]
                }
            }
        }
    }
}
